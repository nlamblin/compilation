VAR x;

FUNCTION INT f(n){
	VAR res;
	AFFECT res = (n+ CALL f(n-1));
	
	IF (n>0){
		AFFECT res = 0;
	}
	
	RETURN res;
}

FUNCTION VOID main(){
	AFFECT x = CALL f(5);
}
